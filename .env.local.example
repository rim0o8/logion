# MongoDB接続URL
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/logion?retryWrites=true&w=majority

# NextAuth.js設定
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# API URL
NEXT_PUBLIC_API_URL=http://localhost:8080/api

# モックモード設定（開発・テスト用）
# true に設定すると、実際のバックエンドに接続せずにモックレスポンスを使用します
NEXT_PUBLIC_USE_MOCK_API=false
NEXT_PUBLIC_USE_MOCK_AUTH=false

# ストレージタイプ（localstorage または indexeddb）
NEXT_PUBLIC_STORAGE_TYPE=localstorage

# LLM Provider設定
OPENAI_API_KEY=your_openai_api_key
OPENAI_API_BASE_URL=https://api.openai.com/v1  # オプション: Azure OpenAIなど別のエンドポイントを使用する場合
OPENAI_API_MODEL=gpt-4-turbo-preview  # オプション: デフォルトのモデルを上書きする場合

# 広告設定
NEXT_PUBLIC_ENABLE_ADS=true  # 広告表示の有効/無効
NEXT_PUBLIC_ADMOB_ANDROID_APP_ID=ca-app-pub-xxxxxxxxxxxxxxxx~yyyyyyyyyy
NEXT_PUBLIC_ADMOB_IOS_APP_ID=ca-app-pub-xxxxxxxxxxxxxxxx~yyyyyyyyyy
NEXT_PUBLIC_ADMOB_BANNER_ID_ANDROID=ca-app-pub-xxxxxxxxxxxxxxxx/yyyyyyyyyy
NEXT_PUBLIC_ADMOB_BANNER_ID_IOS=ca-app-pub-xxxxxxxxxxxxxxxx/yyyyyyyyyy
NEXT_PUBLIC_ADMOB_INTERSTITIAL_ID_ANDROID=ca-app-pub-xxxxxxxxxxxxxxxx/yyyyyyyyyy
NEXT_PUBLIC_ADMOB_INTERSTITIAL_ID_IOS=ca-app-pub-xxxxxxxxxxxxxxxx/yyyyyyyyyy
NEXT_PUBLIC_AD_FREQUENCY_FACTOR=1.0  # 広告表示頻度の調整係数（1.0が標準、0.5で半分の頻度）

# アプリケーション設定
NEXT_PUBLIC_APP_URL=http://localhost:3000 